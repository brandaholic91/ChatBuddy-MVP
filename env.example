# Chatbuddy MVP Environment Variables
# Másold át ezt a fájlt .env néven és töltsd ki a valós értékekkel

# Environment
ENVIRONMENT=development

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here-minimum-20-characters
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here-minimum-20-characters

# Database (Supabase)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here-minimum-100-characters
SUPABASE_SERVICE_KEY=your-supabase-service-key-here-minimum-100-characters

# Security
SECRET_KEY=your-secret-key-here-minimum-32-characters-long
JWT_SECRET=your-jwt-secret-here-minimum-32-characters-long

# Redis (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here-minimum-8-characters

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring (optional)
LOGFIRE_TOKEN=your-logfire-token-here-minimum-20-characters

# LangGraph SDK (optional - LangGraph Cloud szolgáltatáshoz)
LANGGRAPH_API_KEY=your-langgraph-api-key-here-minimum-20-characters
LANGGRAPH_PROJECT_ID=your-langgraph-project-id-here
LANGGRAPH_ENVIRONMENT=development
LANGGRAPH_TIMEOUT=30

# Email (optional)
SENDGRID_API_KEY=your-sendgrid-api-key-here-minimum-20-characters

# SMS (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here-minimum-20-characters
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here-minimum-20-characters

# Social Media Integrations (optional)
# Facebook Messenger Platform
FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-access-token-here-minimum-100-characters
FACEBOOK_APP_SECRET=your-facebook-app-secret-here-minimum-32-characters
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-facebook-webhook-verify-token-here-minimum-10-characters

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here-minimum-100-characters
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id-here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-whatsapp-webhook-verify-token-here-minimum-10-characters

# Webshop API Integrations (optional)
# Shoprenter API
SHOPRENTER_API_KEY=your-shoprenter-api-key-here-minimum-20-characters
SHOPRENTER_BASE_URL=https://your-shop.shoprenter.hu/api

# UNAS API  
UNAS_API_KEY=your-unas-api-key-here-minimum-20-characters
UNAS_BASE_URL=https://your-shop.unas.hu/api

# WooCommerce API
WOOCOMMERCE_API_KEY=your-woocommerce-api-key-here-minimum-20-characters
WOOCOMMERCE_BASE_URL=https://your-woocommerce-shop.com

# Shopify API
SHOPIFY_API_KEY=your-shopify-api-key-here-minimum-20-characters
SHOPIFY_BASE_URL=https://your-shop.myshopify.com

# Development Settings
DEBUG=true
LOG_LEVEL=INFO 